
extends layout

block content
	.navigateBar Navigate to:
		span.navigateOption
			a(href="/locatorDirection") Locator 
		span
			a(href="/resourcesDirection") Resources
	h1.bigBanner #{title}
	h1#resourcesBanner #{title2} 

	.newDogContainer

		form(class= "form-horizontal" role="form" action="/addDogAction" method="post")

			div.form-group
				label(class= "col-sm-4 control-label" for="name") Name:
				.col-sm-6
					input(type="name" class="form-control" name= "name" required)
			div.form-group
				label(class= "col-sm-4 control-label" for="name") Age:
				.col-sm-6
					input(type="name" class="form-control" name="age" required)
			div.form-group
				label(class= "col-sm-4 control-label" for="name") Breed:
				.col-sm-6
					input(type="name" class="form-control" name="breed" required)
			div.form-group
				label(class= "col-lg-4 control-label" for="name") Sex:
				.col-sm-6
					input(type="name" class="form-control" name="sex" required)
			div.form-group
				label(class= "col-lg-4 control-label" for="name") Foster home contact:
				.col-sm-6
					input(type="name" class="form-control" name="foster" required)
			div.form-group
				label(class= "col-sm-4 control-label" for="name") Biography:
				.col-sm-6
					input(type="name" class="form-control" name="biography" required)
			div.form-group
				label(class= "col-sm-4 control-label" for="name") Image(URL):
				.col-sm-6
					input(type="name" class="form-control" name="photo" required)
				.form-group
					.col-sm-offset-2.col-sm-10
						button(type="submit" class="btn btn-default") Submit

			