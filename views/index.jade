extends layout

block content
	h1.bigBanner #{title}
	h1#indexBanner #{title2}

	.mainContainer

		.indexSelector
			img(class = 'indexIcon' src='/images/locatorIcon.png')
			p Search and view available foster homes in Colorado.
			a.indexLink(href="locatorDirection") Locate!

		.indexSelector
			img(class ="indexIcon" src='/images/indexDogIcon.png')
			p Information about each dog in the rescue's care at this time.
			a.indexLink(type= "button" href="dogsDirection") See the dogs!

		.indexSelector
			img(class="indexIcon" src='/images/resourcesIcon.png')
			p Forms needed for any adoption or homecheck, and the volunteer handbook.
			a.indexLink(href="resourcesDirection") View resources

		p <img id='confusedDog' src=/images/confusedpup.jpeg> Don't see what you need?  Please email <a>rescue@westerndogs.org</a> with additional questions. 